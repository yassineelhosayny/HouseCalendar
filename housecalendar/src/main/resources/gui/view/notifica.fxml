<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      styleClass="notification-container"
      stylesheets="@../style/app.css"
      spacing="15"
      prefWidth="350"
      prefHeight="200">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <!-- Header con Chiudi -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <StackPane styleClass="notification-icon-container">
            <Label fx:id="notificationIcon" styleClass="notification-icon" text="ℹ"/>
        </StackPane>
        <Label fx:id="notificationTitle" styleClass="notification-title" 
               text="Notifica" HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnCloseNotif" styleClass="btn-close-notif" text="×"/>
    </HBox>
    
    <!-- Messaggio -->
    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <Label fx:id="notificationMessage" styleClass="notification-message" 
               text="Questa è una notifica di sistema." 
               wrapText="true"/>
        <Label fx:id="notificationTime" styleClass="notification-time" 
               text="Adesso"/>
    </VBox>
    
    <!-- Azioni -->
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="btnDismiss" styleClass="btn-secondary" text="Ignora"/>
        <Button fx:id="btnAction" styleClass="btn-primary" text="Visualizza"/>
    </HBox>
</VBox>
